@{
  Layout ="_Layout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>
@if (Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
}

@foreach (Client client in Model)
{
  <li>Client's Name: @Html.ActionLink($"{client.ClientName}", "Details", new {id = client.ClientId}) || Stylist Name: @client.Stylist.Name</li>
}
<br>
@using (Html.BeginForm())
{
  @Html.Label("Search Clients By Name")
  @Html.TextBox("ClientName")
  <input type="submit" value="Search" class="btn btn-success btn-sm" />
}
<p>@Html.ActionLink("Add a New Client", "Create", null, null, new { @class = "btn btn-success btn-sm"})</p>
<p>@Html.ActionLink("Show All Clients", "Index", null, null, new { @class = "btn btn-success btn-sm"})</p>