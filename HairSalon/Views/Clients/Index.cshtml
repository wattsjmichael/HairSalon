@{
  Layout ="_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>
@if (Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.ClientName}", "Details", new {id = client.ClientId}) || @client.Stylist.Name</li>
}
<br>
@using (Html.BeginForm())
{
  @Html.Label("Search Clients By Name")
  @Html.TextBox("ClientName")
  <input type="submit" value="Search" class="btn btn-info btn-sm" />
}
<p>@Html.ActionLink("Add a New Client", "Create", null, null, new { @class = "btn btn-info btn-sm"})</p>
<p>@Html.ActionLink("Show All Clients", "Index", null, null, new { @class = "btn btn-info btn-sm"})</p>