
@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>
@if (Model.Count == 0)
{
  <h3>No Stylists Have Been Added</h3>
}
@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new {id = stylist.StylistId})</li>
}
<br>
@using (Html.BeginForm())
{
  @Html.Label("Search Stylists By Name")
  @Html.TextBox("Name")
  <input type="submit" value="Search" class="btn btn-info btn-sm" />
}
<p>@Html.ActionLink("Add New Stylist", "Create", null, null, new {@class = "btn btn-info btn-sm"})</p>
<p>@Html.ActionLink("Show All Stylists", "Index", null, null, new {@class = "btn btn-info btn-sm"}) </p>
<p>@Html.ActionLink("Add New Client", "Create", "Clients", null, new {@class = "btn btn-success btn-sm"})</p>