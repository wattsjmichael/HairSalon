@{
  Layout = "_Layout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@model HairSalon.Models.Stylist

<h4>Add A New Stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model=> model.Name)
  @Html.TextBoxFor(model=> model.Name, new {@required="required"})
  @Html.LabelFor(model=> model.Speciality)
  @Html.TextBoxFor(model=> model.Speciality, new {@required="required"})
  <input type="submit" value="Add New Stylist" class="btn btn-info btn-sm" />
}
<p>@Html.ActionLink("Show all Stylists", "Index", null, null, new {@class="btn btn-info btn-sm"})</p>